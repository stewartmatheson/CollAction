<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CollAction</title>

    <environment names="Development">
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" 
              asp-fallback-href="~/lib/font-awesome/css/font-awesome.css" 
              asp-fallback-test-class="fa" asp-fallback-test-property="display" asp-fallback-test-value="inline-block" />
    </environment>
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,700" rel="stylesheet">
    @RenderSection("styles", required: false)
</head>
<body>
    @RenderBody()
    <environment names="Development">
        <script src="~/js/bundle.js?@DateTime.Now.Ticks.ToString()"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/bundle.js"></script>
    </environment>
    @RenderSection("scripts", required: false)
  </body>
</html>
